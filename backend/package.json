{
  "name": "abogado-soft-backend",
  "version": "0.1.0",
  "description": "API REST para AbogadoSoft â€” Bun + Express + Prisma + Supabase (Auth + Realtime)",
  "type": "module",
  "main": "src/server.ts",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "build": "bun build src/server.ts --outdir dist --target bun",
    "start": "bun dist/server.js",
    "prisma:generate": "bunx prisma generate",
    "prisma:push": "bunx prisma db push",
    "prisma:pull": "bunx prisma db pull",
    "prisma:migrate": "bunx prisma migrate dev",
    "prisma:studio": "bunx prisma studio",
    "prisma:seed": "bun prisma/seed.ts",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "@supabase/supabase-js": "^2.49.4",
