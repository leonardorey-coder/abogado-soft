    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "zod": "^3.25.17"
  },
  "devDependencies": {
    "@types/bun": "^1.2.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "prisma": "^6.9.0",
    "typescript": "^5.8.2"
  }
